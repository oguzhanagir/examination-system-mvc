
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Sınav Hazırlama Modülü</title>
</head>
<body>

    <div class="container-fluid ">
        <div class="row">
            <div class="d-flex flex-column flex-shrink-0 p-3 bg-light" style="width: 300px; height:500px;">
                <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none">
                    <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap" /></svg>
                    <span class="fs-4">Sınav Sorumlusu Kontrol Paneli</span>
                </a>
                <hr>
                @Html.Action("UserProfileList", "User")
            <ul class="nav nav-pills flex-column mb-auto ">
                <li class="nav-item mt-4">
                    <a href="~/Examiner/Index" class="nav-link link-dark" aria-current="page">
                        <svg class="bi me-2" width="16" height="16"><use xlink:href="#home" /></svg>
                        Ana Sayfa
                    </a>
                </li>
                <li class="nav-item mt-3">
                    <a href="~/Question/QuestionAdd" class="nav-link link-dark">
                        <svg class="bi me-2" width="16" height="16"><use xlink:href="#speedometer2" /></svg>
                        Soru Hazırlama
                    </a>
                </li>
                <li class="nav-item mt-3">
                    <a href="~/Question/QuestionGetList" class="nav-link link-dark">
                        <svg class="bi me-2" width="16" height="16"><use xlink:href="#speedometer2" /></svg>
                        Sorular
                    </a>
                </li>

                <li class="nav-item mt-3">
                    <a href="/Login/Index" class="nav-link link-dark">
                        <svg class="bi me-2" width="16" height="16"><use xlink:href="#grid" /></svg>
                        Çıkış Yap
                    </a>
                </li>

            </ul>
                <hr>

            </div>


            <div class="col-8 m-5">
                @RenderBody()
            </div>
        </div>
    </div>





    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

</body>
</html>