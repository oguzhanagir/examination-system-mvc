@model EntityLayer.Concrete.Question
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Soru Hazırlama Ekranı</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

</head>
<body>
    <div class="container p-5 m-auto" style="width:55%;">
        <div class="row">
            <form class="form-group" method="post">
                @Html.Label("Sınıf Düzeyi")
                @Html.TextBoxFor(x => x.GradeLevel, new { @class = "form-control border border-primary mt-4" })
                <br />
                @Html.Label("Dersin Adı")
                @Html.TextBoxFor(x => x.LessonName, new { @class = "form-control border border-primary mt-4" })
                <br />
                @Html.Label("Ünite No")
                @Html.TextBoxFor(x => x.UnitNo, new { @class = "form-control border border-primary mt-4" })
                <br />
                @Html.Label("Ünite Adı")
                @Html.TextBoxFor(x => x.UnitName, new { @class = "form-control border border-primary mt-4" })
                <br />
                @Html.Label("Konu No")
                @Html.TextBoxFor(x => x.SubjectNo, new { @class = "form-control border border-primary mt-4" })
                <br />
                @Html.Label("Konu Adı")
                @Html.TextBoxFor(x => x.SubjectName, new { @class = "form-control border border-primary mt-4" })
                <br />
                @Html.Label("Soru No")
                @Html.TextBoxFor(x => x.QuestionNo, new { @class = "form-control border border-primary mt-4" })
                <br />
                @Html.Label("Soru Açıklaması")
                @Html.TextAreaFor(x => x.QuestionText, new { @class = "form-control border border-primary mt-4" })
                <br />
                <p>Grade Level Alınacak</p>
                //Resim Eklenecek 
                //Çoktan Seçmeli Soru Cevapları (radioButton) Eklenecek
                <button class="btn btn-rounded btn-success mt-5">Soru Ekle</button>
            </form>
        </div>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

</body>
</html>
