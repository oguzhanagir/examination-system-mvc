@model EntityLayer.Concrete.Question

@{
    Layout = null;
}



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Soru Hazırlama Ekranı</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    @*Rich Text Editor*@
    <link rel="stylesheet" href="/richtexteditor/rte_theme_default.css" />
    <script type="text/javascript" src="~/richtexteditor/rte.js"></script>
    <script type="text/javascript" src='~/richtexteditor/plugins/all_plugins.js'></script>
    
</head>
<body>
    <div class="container p-5 m-auto" style="width:55%;">
        <div class="row">
            <form class="form-group" method="post">
                <label>Code No</label>
                <input class="form-control border border-primary mt-4 mb-5" type="text" name="CodeNo" placeholder="Code No:">
                <label>Grade Level</label>
                <input class="form-control border border-primary mt-4 mb-5" type="text" name="GradeLevel" placeholder="Grade Level:">
                <label>Lesson Name</label>
                <input class="form-control border border-primary mt-4 mb-5" type="text" name="LessonName" placeholder="Lesson Name">
                <label>Unit No</label>
                <input class="form-control border border-primary mt-4 mb-5" type="text" name="UnitNo" placeholder="Unit No:">
                <label>Unit Name</label>
                <input class="form-control border border-primary mt-4 mb-5" type="text" name="UnitName" placeholder="Unit Name:">
                <label>Subject No</label>
                <input class="form-control border border-primary mt-4 mb-5" type="text" name="SubjectNo" placeholder="Subject No:">
                <label>Subject Name</label>
                <input class="form-control border border-primary mt-4 mb-5" type="text" name="SubjectName" placeholder="Subject Name:">
                <label>Question No</label>
                <input class="form-control border border-primary mt-4 mb-5" type="text" name="QuestionNo" placeholder="Question No:">

                @*Rich Text Editor*@
                <div id="div_editor1">
                    <p>Initial Document Content</p>
                </div>

                <input id="richText" checked type="radio" value="Soru" name="QuestionText">



                <label class="mt-5 mb-5">Doğru Olan Şıkkı İşaretleyiniz</label>
                <br />
                @*Şıkları Veri tabanına kaydetme işlemi yapılacak*@
                <input type="radio" value="A" name="RightAnswer"> <span>A</span>
                @Html.TextBoxFor(x => x.Answer.OptionA, new { @class = "form-control border border-primary mt-4 mb-5", @placeholder = "A Cevap Şıkkı" })

                <input type="radio" value="B" name="RightAnswer"> <span>B</span>
                @Html.TextBoxFor(x => x.Answer.OptionB, new { @class = "form-control border border-primary mt-4 mb-5", @placeholder = "B Cevap Şıkkı" })

                <input type="radio" value="C" name="RightAnswer"> <span>C</span>
                @Html.TextBoxFor(x => x.Answer.OptionC, new { @class = "form-control border border-primary mt-4 mb-5", @placeholder = "C Cevap Şıkkı" })

                <input type="radio" value="D" name="RightAnswer"> <span>D</span>
                @Html.TextBoxFor(x => x.Answer.OptionD, new { @class = "form-control border border-primary mt-4 mb-5", @placeholder = "D Cevap Şıkkı" })



                <button onclick="btngetHTMLCode()" class="btn btn-rounded btn-success mt-5">Soru Ekle</button>


            </form>
        </div> 
    </div>

    @*Rich Text Editor Start*@

    <script>
        var editor1 = new RichTextEditor("#div_editor1");

        editor1.setHTMLCode("<p>Merhabalar</p><p>Soru Yazı Kısmıdır</p>");

        function btngetHTMLCode() {
            alert(editor1.getHTMLCode());
            document.getElementById("richText").value = editor1.getHTMLCode();
        }

        

    </script>
    @*Rich Text Editor End*@

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

</body>
</html>
