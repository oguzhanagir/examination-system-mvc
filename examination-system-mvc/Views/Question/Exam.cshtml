@model IEnumerable<EntityLayer.Concrete.Question>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sınav Ekranı</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-2">
                <p> Sol Bilgiler</p>
            </div>
            <div class="col-10">
                <div class="container">
                    @foreach (var item in Model)
                    {
                        <div class="row">
                            <div class="content-title text-center">
                                <h2>@item.GradeLevel - @item.LessonName</h2>
                                <br />
                                <h2>@item.UnitNo - @item.UnitName</h2>
                            </div>
                            <div class="content-text mt-5 p-5 " style="background-color: #f5f5f5; border-radius:10px; ">
                                <p>@item.QuestionText</p>

                                <div class="container">
                                    <form class="form-group" method="post">
                                        <div class="">
                                            <label class="mt-4">
                                                <input type="radio" name="radio" />
                                                <span>HTML</span>
                                            </label>
                                            <br />
                                            <label class="mt-4">
                                                <input type="radio" name="radio" />
                                                <span>CSS</span>
                                            </label>
                                            <br />
                                            <label class="mt-4">
                                                <input type="radio" name="radio" />
                                                <span>Javascript</span>
                                            </label>
                                            <br />
                                            <label class="mt-4">
                                                <input type="radio" name="radio" />
                                                <span>Javascript</span>
                                            </label>
                                        </div>

                                        <button class="btn btn-rounded btn-success mt-5">Önceki</button>
                                        <button class="btn btn-rounded btn-success mt-5">Sonraki</button>
                                        <button class="btn btn-rounded btn-danger mt-5 float-end">Sınavı Bitir</button>
                                    </form>
                                </div>

                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

</body>
</html>
