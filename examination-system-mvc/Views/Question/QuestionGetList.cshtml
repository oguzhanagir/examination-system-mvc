@model IEnumerable<EntityLayer.Concrete.Question>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">


<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Kod No</th>
            <th scope="col">Sınıf Düzeyi</th>
            <th scope="col">Dersin Adı:</th>
            <th scope="col">Ünite No</th>
            <th scope="col">Ünite Adı</th>
            <th scope="col">Konu No</th>
            <th scope="col">Konu Adı</th>
            <th scope="col">Soru No</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th> </th>
                <th scope="row">@item.CodeNo</th>
                <td>@item.GradeLevel</td>
                <td>@item.LessonName</td>
                <td>@item.UnitNo</td>
                <td>@item.UnitName</td>
                <td>@item.SubjectNo</td>
                <td>@item.SubjectName</td>
                <td>@item.QuestionNo</td>
                <td><a href="/Question/DeleteQuestion/@item.QuestionID" class="btn btn-rounded btn-danger ">Sil</a></td>
            </tr>
        }

    </tbody>
</table>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
