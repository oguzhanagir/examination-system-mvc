                            <input class="input-checkbox100" id="sorumluRadio" type="radio" name="remember-me">
                            <label class="label-checkbox100 mt-3" for="sorumluRadio">
                                Sınav Sorumlusu
                            </label>
                            <input class="input-checkbox100" id="ögrenciRadio" type="radio" name="remember-me">
                            <label class="label-checkbox100 mt-3" for="ögrenciRadio ">
                                Öğrenci
                            </label>
                        </div>*@

                        <div>
                            <a href="#" class="txt1">
                                Şifrenizi mi Unuttunuz ?
                            </a>
                        </div>
                    </div>

                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn">
                            Giriş Yap
                        </button>
                    </div>

                    <div class="mt-3">
                        <a class="txt2" href="/Login/Register">
                            Kayıt Olmak İçin Tıklayınız
                            <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

